<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.weather.MainActivity"
        android:orientation="vertical"
        android:id="@+id/layout_main">

    <com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:fitsSystemWindows="true"
                                                     android:id="@+id/appbar">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/AppTheme.Actionbar"
                android:id="@+id/toolbar"
        />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:id="@+id/content_main"
                                                       app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
        <androidx.constraintlayout.widget.Group android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/txt_info"
                                                app:constraint_referenced_ids="txt_pressure_text,txt_clouds_text,txt_temp_min_text,txt_temp_max_text"
                                                android:visibility="invisible"/>
        <ProgressBar android:layout_width="wrap_content"
                     android:id="@+id/progress_bar_main"
                     android:layout_height="wrap_content"
                     android:layout_marginBottom="8dp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     android:indeterminate="true"
                     tools:visibility="invisible"/>
        <ImageView android:id="@+id/img_weather_icon" android:layout_width="75dp"
                   android:layout_height="75dp"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   tools:src="@drawable/ic_snow"
                   android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/txt_weather_description"
                  tools:text="Deszcz"

                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintHorizontal_bias="0.505" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/img_weather_icon"/>
        <TextView
                android:id="@+id/txt_temperature"
                style="@style/TextAppearance.MaterialComponents.Headline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="23 C"

                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_weather_description"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline3"/>
        <TextView
                android:id="@+id/txt_temperature_min"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="-12 C"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline3"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline6"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/txt_temperature_max" tools:text="37 C"

                  style="@style/TextAppearance.MaterialComponents.Body1"
                  app:layout_constraintEnd_toStartOf="@+id/guideline"
                  app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginStart="8dp"
                  android:layout_marginEnd="8dp"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline5"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline6"/>

        <TextView
                android:id="@+id/txt_city_name"
                style="@style/TextAppearance.MaterialComponents.Headline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="dziury"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline5"
                app:layout_constraintVertical_bias="0.100000024"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline" app:layout_constraintGuide_percent="0.50121653"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pressure_text"
                android:id="@+id/txt_pressure_text" tools:text="@string/pressure_text"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline3" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline6"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clouds_text"
                android:id="@+id/txt_clouds_text" tools:text="@string/clouds_text"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline6"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline5"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_temp_max_text" tools:text="@string/temperature_max_text"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline5"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline6"
                android:text="@string/temperature_max_text" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_temp_min_text" tools:text="@string/temperature_min_text"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline6"
                android:text="@string/temperature_min_text"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline3"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintGuide_end="356dp"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline4" app:layout_constraintGuide_begin="144dp"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline2" app:layout_constraintGuide_percent="0.75"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline5" app:layout_constraintGuide_percent="0.65"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_pressure"
                style="@style/TextAppearance.MaterialComponents.Body1"
                tools:text="1000 pa"
                app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline3"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline6"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_clouds"
                style="@style/TextAppearance.MaterialComponents.Body1"
                tools:text="69%"
                app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="16dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline6"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline6" app:layout_constraintGuide_end="303dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>